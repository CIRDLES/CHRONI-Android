<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomeScreenActivity"
    android:id="@+id/mainMenuBackground">

    <TextView
        android:id="@+id/versionNumberMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version Number"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="45sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/menuHistoryButton"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:background="@drawable/dark_blue_button"
        android:minHeight="100dp"
        android:minWidth="400dp"
        android:text="History"
        android:textColor="@color/white"
        android:textColorHint="@color/black"
        android:textSize="25sp"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/menuProfileButton" />

    <Button
        android:id="@+id/menuOpenButton"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:background="@drawable/dark_blue_button"
        android:minHeight="100dp"
        android:minWidth="400dp"
        android:text="Open"
        android:textColor="@color/white"
        android:textColorHint="@color/black"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/menuHistoryButton" />

    <Button
        android:id="@+id/menuProfileButton"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:background="@drawable/dark_blue_button"
        android:minHeight="100dip"
        android:minWidth="400dip"
        android:text="Credentials"
        android:textColor="@color/white"
        android:textColorHint="@color/black"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/versionNumberMainMenu" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="66dp"
        android:layout_height="110dp"
        android:src="@drawable/chroni_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>