<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/reportSettingsBackground">

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Report Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="60sp"
        android:layout_marginTop="85dp" />

    <Button
        android:id="@+id/reportSettingsFileSelectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/light_gray_button"
        android:minHeight="30dp"
        android:minWidth="30dp"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/reportSettingsFileSelectText"
        android:layout_alignBaseline="@+id/reportSettingsFileSelectText"
        android:layout_marginStart="5dp"
        android:text="+"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/reportSettingsFileSelectText"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Select a file from this device"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@id/textView2"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="66dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:minHeight="200dp"
        android:minWidth="200dp"
        android:src="@drawable/chroni_logo"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/reportSettingsFileOpenButton"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:background="@drawable/dark_blue_button"
        android:text="Open"
        android:layout_alignBottom="@+id/reportSettingsFileSelectText"
        android:layout_toEndOf="@+id/reportSettingsFileSelectButton"
        android:layout_marginStart="25dp"
        android:textSize="20sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginStart="175dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/currentReportSettingsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/testText"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/reportSettingsMenuCancelButton"
        android:layout_marginStart="75dp"
        android:layout_marginTop="45dp"
        android:textSize="22sp"
        android:background="@drawable/dark_blue_button"
        android:textColor="@color/white" />

</RelativeLayout>
