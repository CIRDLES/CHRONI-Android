<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/aboutBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:textColor="@color/border_grey"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/chroniDirectoryButton"
        android:layout_marginBottom="90dp" />


    <Button
        android:text="CHRONI Directory"
        android:id="@+id/chroniDirectoryButton"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:background="@color/button_blue"
        android:minHeight="105dip"
        android:minWidth="500dip"
        android:textColor="@color/white"
        android:textColorHint="@color/border_grey"
        android:textSize="25dp"
        android:layout_above="@+id/deviceDirectoryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:text="Device Directory"
        android:id="@+id/deviceDirectoryButton"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:background="@color/button_blue"
        android:textColor="@color/white"
        android:textColorHint="@color/border_grey"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="72dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:src="@drawable/chroni_logo"
        android:layout_marginTop="15dp" />

</RelativeLayout>