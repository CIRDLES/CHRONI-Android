<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/reportSettingsBackground">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="72dp"
        android:layout_height="120dp"
        android:src="@drawable/chroni_logo"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp" />

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="35sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView1" />

    <Button
        android:id="@+id/reportSettingsFileSelectButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/light_gray_button"
        android:text="+"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:layout_alignTop="@+id/reportSettingsFileOpenButton"
        android:layout_toStartOf="@+id/reportSettingsFileOpenButton"
        android:layout_marginEnd="5dp" />

    <EditText
        android:id="@+id/reportSettingsFileSelectText"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Select a file from this device"
        android:textColor="@color/black"
        android:layout_alignParentBottom="false"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/currentReportSettingsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/testText"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="Open"
        android:id="@+id/reportSettingsFileOpenButton"
        android:background="@drawable/dark_blue_button"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@+id/reportSettingsFileSelectText"
        android:layout_alignEnd="@+id/reportSettingsFileSelectText" />

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Cancel "
        android:id="@+id/reportSettingsMenuCancelButton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:textSize="18sp"
        android:background="@drawable/dark_blue_button"
        android:textColor="@color/white" />

</RelativeLayout>