<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/aliquotSelectBackground">

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GeoChron IGSN"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/aliquotIGSNText"/>

    <Button
        android:id="@+id/aliquotIGSNSubmitButton"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:background="@drawable/dark_blue_button"
        android:minWidth="50dp"
        android:text="Download"
        android:textSize="14sp"
        android:layout_alignParentStart="false"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/aliquotIGSNText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:minWidth="270dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="40dp" />

    <EditText
        android:id="@+id/aliquotFileSelectText"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Select a file from this device"
        android:minWidth="250dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_above="@+id/TextView01"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/aliquotFileSelectButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/light_gray_button"
        android:textColor="#000000"
        android:layout_marginStart="3dp"
        android:text="+" android:textSize="14sp"
        android:layout_toEndOf="@+id/aliquotFileSelectText"
        android:layout_alignTop="@+id/aliquotFileSelectText"/>

    <Button
        android:id="@+id/aliquotFileSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/dark_blue_button"
        android:minWidth="50dp"
        android:text="Open"
        android:textSize="14sp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/aliquotFileSelectText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Aliquot"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/aliquotFileSelectText"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:src="@drawable/chroni_logo"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Aliquot"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="44sp"
        android:layout_below="@+id/imageView1" />

    <TextView
        android:id="@+id/aliquotCurrentReportSettingsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/testText"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:layout_gravity="center" />

</RelativeLayout>
