<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/reportSettingsBackground">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="180dp"
        android:layout_height="300dp"
        android:src="@drawable/chroni_logo"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginStart="95dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp" />

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="76sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView1" />

    <Button
        android:id="@+id/reportSettingsFileSelectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/light_gray_button"
        android:minHeight="35dp"
        android:minWidth="35dp"
        android:textColor="#000000"
        android:text="+"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_alignBaseline="@+id/reportSettingsFileSelectText"
        android:layout_toEndOf="@+id/reportSettingsFileSelectText" />

    <EditText
        android:id="@+id/reportSettingsFileSelectText"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Select a file from this device"
        android:textColor="@color/black"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentBottom="false"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:textSize="24sp"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/currentReportSettingsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="42sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/testText"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:layout_marginTop="125dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Open"
        android:id="@+id/reportSettingsFileOpenButton"
        android:background="@drawable/dark_blue_button"
        android:layout_alignBottom="@+id/reportSettingsFileSelectText"
        android:layout_toEndOf="@+id/reportSettingsFileSelectButton"
        android:layout_marginStart="30dp"
        android:textSize="26sp"
        android:textColor="@color/white" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/reportSettingsMenuCancelButton"
        android:background="@drawable/dark_blue_button"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:textColor="@color/white" />

</RelativeLayout>