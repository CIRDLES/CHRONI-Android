<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/reportSettingsBackground">

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="80sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp" />

    <Button
        android:id="@+id/reportSettingsFileSelectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/light_gray_button"
        android:minHeight="35dp"
        android:minWidth="35dp"
        android:textColor="#000000"
        android:text="+"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_alignBaseline="@+id/reportSettingsFileOpenButton"
        android:layout_toStartOf="@+id/reportSettingsFileOpenButton"
        android:layout_marginEnd="30dp" />

    <EditText
        android:id="@+id/reportSettingsFileSelectText"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Select a file from this device"
        android:textColor="@color/black"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textSize="25sp"
        android:layout_alignBaseline="@+id/reportSettingsFileSelectButton"
        android:layout_toStartOf="@+id/reportSettingsFileSelectButton" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:minHeight="200dp"
        android:minWidth="200dp"
        android:src="@drawable/chroni_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/reportSettingsFileOpenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_blue_button"
        android:minHeight="48dp"
        android:minWidth="135dp"
        android:text="Open"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="280dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/reportSettingsFileSelectText"
        android:layout_toStartOf="@+id/reportSettingsFileSelectText"
        android:layout_marginEnd="30dp" />

    <TextView
        android:id="@+id/currentReportSettingsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/testText"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="Current Settings:\nDefault Report Settings"
        android:gravity="center"
        android:layout_marginTop="75dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/reportSettingsMenuCancelButton"
        android:layout_marginStart="120dp"
        android:layout_marginTop="60dp"
        android:textSize="22sp"
        android:background="@drawable/dark_blue_button"
        android:textColor="@color/white" />

</RelativeLayout>
