<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/userProfileBackground">

    <EditText
        android:id="@+id/geochronPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:minWidth="300dip"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_above="@+id/profileValidateButton"
        android:layout_alignStart="@id/fileBrowserHomeButton"
        android:layout_marginStart="32.5dp"
        android:layout_marginBottom="65dp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/geochronUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:minWidth="300dip"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_above="@+id/geochronPassword"
        android:layout_alignStart="@+id/geochronPassword"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="35sp"
        android:layout_above="@+id/fileBrowserHomeButton"
        android:layout_marginBottom="65dp"
        android:layout_toStartOf="@id/geochronPassword"
        android:layout_marginEnd="45dp" />

    <Button
        android:id="@+id/profileValidateButton"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dark_blue_button"
        android:minHeight="80dip"
        android:minWidth="130dip"
        android:text="Validate"
        android:textColor="@color/white"
        android:textSize="30sp"

        android:layout_marginBottom="50dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_toStartOf="@id/fileBrowserHomeButton"
        android:layout_marginEnd="45dp" />


    <Button
        android:id="@+id/fileBrowserHomeButton"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:background="@drawable/dark_blue_button"
        android:minHeight="80dp"
        android:minWidth="130dp"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Credentials"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="90sp"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testText"
        android:layout_centerHorizontal="true"
        android:text="Geochron Portal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="35sp"
        android:layout_alignEnd="@+id/TextView03"
        android:layout_above="@+id/TextView03"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/validationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/geochronUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:maxWidth="300dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"/>

    <Button
        android:id="@+id/profileEraseButton"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@drawable/dark_blue_button"
        android:layout_centerHorizontal="true"
        android:background="@color/button_blue"
        android:minHeight="80dip"
        android:minWidth="130dip"
        android:text="Erase"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_toEndOf="@id/fileBrowserHomeButton"
        android:layout_marginStart="45sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="115dp"
        android:src="@drawable/chroni_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="15dp" />

</RelativeLayout>