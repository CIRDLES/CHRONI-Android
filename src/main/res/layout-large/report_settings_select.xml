<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/reportSettingsBackground">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:src="@drawable/cirdles_logo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginLeft="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125dp" />

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="58dp"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/currentReportSettingsLabel" />

    <Button
        android:id="@+id/reportSettingsFileSelectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:text="+"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/reportSettingsFileSelectText"
        android:layout_toRightOf="@+id/reportSettingsFileSelectText" />

    <EditText
        android:id="@+id/reportSettingsFileSelectText"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Select a file from this device"
        android:textColor="@color/black"
        android:layout_alignParentBottom="false"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignBottom="@+id/textView2" />

    <TextView
        android:id="@+id/currentReportSettingsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Report Settings: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/reportSettingsFileSelectText"
        android:layout_marginBottom="140dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Open"
        android:id="@+id/reportSettingsFileOpenButton"
        android:background="@color/button_blue"
        android:layout_alignBottom="@+id/reportSettingsFileSelectButton"
        android:layout_toRightOf="@+id/reportSettingsFileSelectButton"
        android:layout_marginLeft="15dp"
        android:textSize="22dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cancel "
        android:id="@+id/reportSettingsMenuCancelButton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:textSize="22dp"
        android:background="@color/button_blue" />

</RelativeLayout>