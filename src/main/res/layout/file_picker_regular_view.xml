<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="#111111">

        <Button
            android:id="@+id/filePickerPreviousButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:background="@drawable/dark_gray_button"
            android:text="Previous Folder"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/filePickerPasteButton"
            android:text="Paste"
            android:visibility="gone"
            android:background="@drawable/dark_gray_button"
            android:onClick="onPasteButtonClick"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="New Folder"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:onClick="onNewFolderButtonClicked"
            android:background="@drawable/dark_gray_button"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp" />

    </RelativeLayout>

</RelativeLayout>