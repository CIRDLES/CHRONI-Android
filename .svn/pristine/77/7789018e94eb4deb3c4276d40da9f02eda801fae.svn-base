<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <EditText
        android:id="@+id/aliquotIGSNText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="381dp"
        android:layout_marginRight="203dp"
        android:ems="10"
        android:minWidth="325dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/aliquotFileSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/aliquotIGSNText"
        android:layout_marginBottom="75dp"
        android:layout_toRightOf="@+id/aliquotFileSelectButton"
        android:background="@color/button_blue"
        android:minWidth="135dp"
        android:text="Submit" />

    <Button
        android:id="@+id/aliquotFileSelectButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/aliquotIGSNText"
        android:layout_alignTop="@+id/aliquotFileSubmitButton"
        android:background="@color/grey"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:text="+"
        android:textSize="25sp" />

    <Button
        android:id="@+id/aliquotURLButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/aliquotURLText"
        android:layout_alignLeft="@+id/aliquotIGSNSubmitButton"
        android:background="@color/button_blue"
        android:minWidth="135dp"
        android:text="Submit" />

     <Button
         android:id="@+id/aliquotIGSNSubmitButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/aliquotIGSNText"
         android:layout_alignLeft="@+id/aliquotFileSubmitButton"
         android:background="@color/button_blue"
         android:minWidth="135dp"
         android:text="Submit" />

     <TextView
         android:id="@+id/TextView01"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/aliquotIGSNText"
         android:layout_toLeftOf="@+id/textView1"
         android:text="GeoChron IGSN"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="@color/black"
         android:textSize="30sp" />

     <EditText
         android:id="@+id/aliquotFileSelectText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/textView2"
         android:layout_alignBottom="@+id/textView2"
         android:layout_centerHorizontal="true"
         android:editable="false"
         android:ems="10"
         android:hint="Select a file from this device"
         android:minWidth="275dp"
         android:textColor="@color/black" />

     <TextView
         android:id="@+id/TextView02"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/TextView01"
         android:layout_alignTop="@+id/aliquotURLText"
         android:layout_marginLeft="18dp"
         android:text="URL"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="@color/black"
         android:textSize="30sp" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/aliquotFileSelectButton"
         android:layout_marginRight="16dp"
         android:layout_toLeftOf="@+id/aliquotFileSelectText"
         android:text="Saved Aliquot"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="@color/black"
         android:textSize="30sp" />

     <EditText
         android:id="@+id/aliquotURLText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/TextView01"
         android:layout_marginLeft="18dp"
         android:layout_marginTop="79dp"
         android:layout_toRightOf="@+id/TextView02"
         android:ems="10"
         android:minWidth="430dp"
         android:textColor="@color/black" >

         <requestFocus />
     </EditText>

     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_alignRight="@+id/aliquotFileSelectButton"
         android:layout_marginTop="67dp"
         android:minHeight="400dp"
         android:minWidth="400dp"
         android:src="@drawable/cirdles_logo" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/aliquotFileSelectButton"
         android:layout_marginBottom="44dp"
         android:layout_toLeftOf="@+id/aliquotFileSelectButton"
         android:text="Select"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="@color/border_grey"
         android:textSize="100sp" />

</RelativeLayout>
