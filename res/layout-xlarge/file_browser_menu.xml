<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_background"
    android:id="@+id/aboutBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select your file directory"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="50sp"
        android:textColor="@color/border_grey"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="CHRONI Directory"
        android:id="@+id/chroniDirectoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/button_blue"
        android:minHeight="115dip"
        android:minWidth="550dip"
        android:textColor="@color/white"
        android:textColorHint="@color/border_grey"
        android:textSize="55sp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="96dp" />

    <Button
        android:text="Device Directory"
        android:id="@+id/deviceDirectoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/button_blue"
        android:minHeight="105dip"
        android:minWidth="550dip"
        android:textColor="@color/white"
        android:textColorHint="@color/border_grey"
        android:textSize="55sp"
        android:layout_below="@+id/chroniDirectoryButton"
        android:layout_alignStart="@+id/chroniDirectoryButton"
        android:layout_marginTop="101dp" />

</RelativeLayout>