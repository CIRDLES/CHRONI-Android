<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/reportSettingsBackground">

    <EditText
        android:id="@+id/reportSettingsUrlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_alignBottom="@+id/reportSettingsUrlButton"
        android:layout_toLeftOf="@+id/reportSettingsUrlButton"
        android:layout_toStartOf="@+id/reportSettingsUrlButton"
        android:layout_toRightOf="@+id/currentReportSettingsLabel"
        android:layout_toEndOf="@+id/currentReportSettingsLabel"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:text="Report Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="60sp" />

    <Button
        android:id="@+id/reportSettingsUrlButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/button_blue"
        android:minWidth="135dip"
        android:text="Open"
        android:textSize="20sp"
        android:layout_below="@+id/reportSettingsFileOpenButton"
        android:layout_alignLeft="@+id/reportSettingsFileOpenButton"
        android:layout_alignStart="@+id/reportSettingsFileOpenButton"
        android:layout_marginTop="41dp" />

    <Button
        android:id="@+id/reportSettingsFileSelectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginLeft="51dp"
        android:layout_toRightOf="@+id/imageView1"
        android:background="@color/dark_grey"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:text="+"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/reportSettingsFileSelectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/reportSettingsFileOpenButton"
        android:layout_alignBottom="@+id/reportSettingsFileOpenButton"
        android:layout_toLeftOf="@+id/reportSettingsFileSelectButton"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:hint="Select a file from this device"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:minHeight="200dp"
        android:minWidth="200dp"
        android:src="@drawable/cirdles_logo" />

    <Button
        android:id="@+id/reportSettingsFileOpenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/reportSettingsFileSelectButton"
        android:layout_alignBottom="@+id/reportSettingsFileSelectButton"
        android:layout_toRightOf="@+id/testText"
        android:background="@color/button_blue"
        android:minHeight="48dp"
        android:minWidth="135dp"
        android:text="Open"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testText"
        android:layout_marginRight="37dp"
        android:layout_marginTop="191dp"
        android:layout_toLeftOf="@+id/testText"
        android:text="Device"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/currentReportSettingsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_alignTop="@+id/reportSettingsUrlText"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Report Settings: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_below="@+id/testText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />

</RelativeLayout>
