<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:src="@drawable/cirdles_logo" />

    <EditText
        android:id="@+id/geochronPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView03"
        android:layout_alignBottom="@+id/TextView03"
        android:layout_alignLeft="@+id/geochronUsername"
        android:ems="10"
        android:inputType="textPassword"
        android:minWidth="400dip"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/geochronUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView02"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_alignLeft="@+id/testText"
        android:layout_marginLeft="51dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:minWidth="400dip"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_marginRight="39dp"
        android:layout_marginTop="61dp"
        android:layout_toLeftOf="@+id/geochronPassword"
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/geochronUsername"
        android:layout_marginTop="72dp"
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Geochron Portal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:text="Profile"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="100sp" />

    <Button
        android:id="@+id/profileMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileSaveButton"
        android:layout_marginLeft="68dp"
        android:layout_toRightOf="@+id/imageView1"
        android:background="@color/button_blue"
        android:minHeight="80dp"
        android:minWidth="130dp"
        android:text="Menu"
        android:textSize="35sp" />

    <Button
        android:id="@+id/profileSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="66dp"
        android:layout_toLeftOf="@+id/profileMenuButton"
        android:background="@color/button_blue"
        android:minHeight="80dip"
        android:minWidth="130dip"
        android:text="Save"
        android:textSize="35sp" />

    <ToggleButton
        android:id="@+id/profileValidateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_alignTop="@+id/profileSaveButton"
        android:background="@color/red"
        android:minHeight="80dip"
        android:minWidth="130dip"
        android:text="Unvalidated!"
        android:textOff="Unvalidated!"
        android:textOn="Validated!" />

</RelativeLayout>