<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_background" >

    <EditText
        android:id="@+id/geochronPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView03"
        android:layout_alignBottom="@+id/TextView03"
        android:layout_alignLeft="@+id/geochronUsername"
        android:ems="10"
        android:inputType="textPassword"
        android:minWidth="400dip"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/geochronUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView02"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_alignLeft="@+id/testText"
        android:layout_marginLeft="51dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:minWidth="400dip"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/geochronUsername"
        android:layout_marginTop="72dp"
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="35sp" />

    <Button
        android:id="@+id/profileValidateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="58dp"
        android:background="@color/button_blue"
        android:minHeight="80dip"
        android:minWidth="130dip"
        android:text="Validate"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <Button
        android:id="@+id/profileMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/geochronPassword"
        android:layout_alignTop="@+id/profileValidateButton"
        android:background="@color/button_blue"
        android:minHeight="80dp"
        android:minWidth="130dp"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Profile"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="100sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testText"
        android:layout_centerHorizontal="true"
        android:text="Geochron Portal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="33dp"
        android:layout_toLeftOf="@+id/geochronUsername"
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/validationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/geochronPassword"
        android:layout_marginTop="48dp"
        android:layout_toRightOf="@+id/profileValidateButton"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/profileEraseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileMenuButton"
        android:layout_centerHorizontal="true"
        android:background="@color/button_blue"
        android:minHeight="80dip"
        android:minWidth="130dip"
        android:text="Erase"
        android:textColor="@color/white"
        android:textSize="35sp" />

</RelativeLayout>