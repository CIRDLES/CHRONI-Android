<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeScreenActivity"
    android:id="@+id/mainMenuBackground">

    <Button
        android:id="@+id/menuHistoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="337dp"
        android:background="@color/button_blue"
        android:minHeight="115dip"
        android:minWidth="500dip"
        android:text="History"
        android:textColor="@color/white"
        android:textColorHint="@color/border_grey"
        android:textSize="75sp" />

    <Button
        android:id="@+id/menuProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/menuHistoryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="139dp"
        android:background="@color/button_blue"
        android:minHeight="115dip"
        android:minWidth="500dip"
        android:text="Credentials"
        android:textColor="@color/white"
        android:textColorHint="@color/border_grey"
        android:textSize="75sp" />

    <Button
        android:id="@+id/menuOpenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menuHistoryButton"
        android:layout_alignLeft="@+id/menuHistoryButton"
        android:layout_marginBottom="21dp"
        android:background="@color/button_blue"
        android:minHeight="115dip"
        android:minWidth="500dip"
        android:text="Open"
        android:textColor="@color/white"
        android:textColorHint="@color/border_grey"
        android:textSize="75sp" />

    <TextView
        android:id="@+id/versionNumberMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:text="Version"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menuOpenButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:text="Home"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="100sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/testText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:minHeight="430dp"
        android:minWidth="430dp"
        android:src="@drawable/cirdles_logo" />

</RelativeLayout>
