<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/userProfileBackground"><![CDATA[



    TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/testText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:text="Geochron Portal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="35sp" />



    ]]>

    <TextView
        android:id="@+id/aboutTextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="60sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />

    TextView
    android:id="@+id/TextView02"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/TextView03"
    android:layout_below="@+id/TextView01"
    android:layout_marginTop="29dp"
    android:text="Username"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="@color/border_grey"
    android:textSize="25sp" />

    <Button
        android:id="@+id/fileBrowserHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/button_blue"
        android:minHeight="50dp"
        android:minWidth="100dp"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Filename"
        android:id="@+id/testFileNameInputButton"
        android:layout_above="@+id/fileBrowserHomeButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/aboutText"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/about_text"
        android:textAlignment="center"
        android:textSize="25sp"
        android:paddingRight="50dp"
        android:paddingBottom="30dp"
        android:paddingTop="10dp"
        android:paddingLeft="50dp"
        android:textColor="@color/black"
        android:layout_below="@+id/aboutTextHeader"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/testFileNameInputButton"
        android:editable="true"
        android:scrollbars = "vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:id="@+id/logoImageView"
        android:background="@drawable/cirdles_logo"
        android:layout_alignWithParentIfMissing="false"
        android:clickable="false"
        android:cropToPadding="false"
        android:layout_marginStart="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/aboutText"
        android:layout_marginBottom="30dp" />

</RelativeLayout>