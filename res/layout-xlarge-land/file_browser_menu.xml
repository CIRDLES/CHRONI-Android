<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/aboutBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="100dp"
        android:textColor="@color/border_grey"
        android:layout_marginBottom="51dp"
        android:layout_above="@+id/chroniDirectoryButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="CHRONI Directory"
        android:id="@+id/chroniDirectoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/button_blue"
        android:minHeight="115dip"
        android:minWidth="550dip"
        android:textColor="@color/white"
        android:textColorHint="@color/border_grey"
        android:textSize="55sp"
        android:layout_gravity="center"
        android:layout_alignBottom="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp" />

    <Button
        android:text="Device Directory"
        android:id="@+id/deviceDirectoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/button_blue"
        android:minHeight="105dip"
        android:minWidth="550dip"
        android:textColor="@color/white"
        android:textColorHint="@color/border_grey"
        android:textSize="55sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/chroniDirectoryButton"
        android:layout_marginBottom="76dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:background="@drawable/cirdles_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="73dp" />

</RelativeLayout>