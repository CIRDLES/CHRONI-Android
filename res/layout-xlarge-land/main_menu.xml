<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeScreenActivity"
    android:id="@+id/mainMenuBackground">

    <TextView
        android:id="@+id/versionNumberMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:text="Version Number"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/menuOpenButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="128dp"
        android:text="Home"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="100sp" />

    <Button
        android:id="@+id/menuHistoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menuProfileButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@color/button_blue"
        android:minHeight="100dp"
        android:minWidth="400dp"
        android:text="History"
        android:textColor="@color/white"
        android:textColorHint="@color/black"
        android:textSize="50sp" />

    <Button
        android:id="@+id/menuOpenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menuHistoryButton"
        android:layout_alignLeft="@+id/menuHistoryButton"
        android:layout_marginBottom="24dp"
        android:background="@color/button_blue"
        android:minHeight="100dp"
        android:minWidth="400dp"
        android:text="Open"
        android:textColor="@color/white"
        android:textColorHint="@color/black"
        android:textSize="50sp" />

    <Button
        android:id="@+id/menuProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/versionNumberMainMenu"
        android:layout_alignLeft="@+id/menuHistoryButton"
        android:layout_marginBottom="33dp"
        android:background="@color/button_blue"
        android:minHeight="100dip"
        android:minWidth="400dip"
        android:text="Credentials"
        android:textColor="@color/white"
        android:textColorHint="@color/black"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/testText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:src="@drawable/cirdles_logo" />

</RelativeLayout>