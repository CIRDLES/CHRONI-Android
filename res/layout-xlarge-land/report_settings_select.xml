<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/reportSettingsBackground">

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp" />

    <Button
        android:id="@+id/reportSettingsFileSelectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:text="+"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/reportSettingsFileOpenButton"
        android:layout_toLeftOf="@+id/reportSettingsFileOpenButton"
        android:layout_marginRight="30dp" />

    <EditText
        android:id="@+id/reportSettingsFileSelectText"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Select a file from this device"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_alignBottom="@+id/reportSettingsFileSelectButton"
        android:layout_toLeftOf="@+id/reportSettingsFileSelectButton" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:minHeight="200dp"
        android:minWidth="200dp"
        android:src="@drawable/cirdles_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="75dp"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/reportSettingsFileOpenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/button_blue"
        android:minHeight="48dp"
        android:minWidth="135dp"
        android:text="Open"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="280dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/reportSettingsFileSelectText"
        android:layout_toLeftOf="@+id/reportSettingsFileSelectText"
        android:layout_marginRight="30dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Report Settings: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/reportSettingsFileSelectText"
        android:layout_marginBottom="75dp" />

</RelativeLayout>
