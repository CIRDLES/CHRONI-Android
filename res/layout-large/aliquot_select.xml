<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/aliquotSelectBackground">

<Button
         android:id="@+id/aliquotFileSubmitButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@color/button_blue"
         android:minWidth="50dp"
         android:text="Open"
         android:textSize="18dp"
    android:layout_alignBottom="@+id/aliquotFileSelectButton"
    android:layout_toRightOf="@+id/aliquotFileSelectButton"
    android:layout_alignRight="@+id/aliquotIGSNSubmitButton"
    android:layout_marginLeft="15dp" />

    <Button
         android:id="@+id/aliquotIGSNSubmitButton"
         android:layout_width="90dp"
         android:layout_height="wrap_content"
        android:background="@color/button_blue"
         android:minWidth="50dp"
         android:text="Download"
         android:textSize="18dp"
        android:layout_alignBottom="@+id/aliquotIGSNText"
        android:layout_toRightOf="@+id/aliquotIGSNText"
        android:layout_marginLeft="10dp" />

     <TextView
         android:id="@+id/TextView01"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="GeoChron IGSN"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="@color/black"
         android:textSize="20sp"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="140dp"
         android:layout_marginLeft="40dp" />

     <EditText
         android:id="@+id/aliquotFileSelectText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:editable="false"
         android:ems="10"
         android:hint="Select a file from this device"
         android:minWidth="250dp"
         android:textColor="@color/black"
         android:textSize="17sp"
         android:layout_alignLeft="@+id/aliquotIGSNText"
         android:layout_above="@+id/aliquotIGSNText"
         android:layout_marginBottom="50dp" />

     <Button
         android:id="@+id/aliquotFileSelectButton"
         style="?android:attr/buttonStyleSmall"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:background="@color/dark_grey"
         android:minHeight="48dp"
         android:minWidth="48dp"
         android:text="+"
         android:textSize="15sp"
         android:layout_toRightOf="@+id/aliquotFileSelectText"
         android:layout_alignBottom="@+id/aliquotFileSelectText" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Saved Aliquot"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="@color/black"
         android:textSize="20sp"
         android:layout_toLeftOf="@+id/aliquotFileSelectText"
         android:layout_alignBottom="@+id/aliquotFileSelectText" />

     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="150dp"
         android:layout_height="250dp"
         android:layout_centerHorizontal="true"
         android:maxHeight="200dp"
         android:maxWidth="200dp"
         android:src="@drawable/chroni_logo"
         android:layout_marginTop="10dp" />

     <TextView
         android:id="@+id/testText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:text="Aliquot"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="@color/border_grey"
         android:textSize="70sp"
         android:layout_above="@+id/aliquotFileSelectText"
         android:layout_marginBottom="125dp" />

     <EditText
         android:id="@+id/aliquotIGSNText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:ems="10"
         android:minWidth="270dp"
         android:textColor="@color/black"
         android:textSize="15sp"
         android:layout_alignBottom="@+id/TextView01"
         android:layout_toRightOf="@+id/TextView01" />

</RelativeLayout>
