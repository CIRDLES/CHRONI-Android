<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/reportSettingsBackground">

<Button
        android:id="@+id/reportSettingsUrlButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_alignLeft="@+id/reportSettingsFileOpenButton"
        android:background="@color/button_blue"
        android:minWidth="50dip"
        android:text="Open"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cirdles_logo" />

    <Button
        android:id="@+id/reportSettingsFileOpenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/reportSettingsFileSelectButton"
        android:layout_alignBottom="@+id/reportSettingsFileSelectButton"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/reportSettingsFileSelectButton"
        android:background="@color/button_blue"
        android:minHeight="48dp"
        android:minWidth="50dp"
        android:text="Open"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginBottom="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_above="@+id/reportSettingsUrlButton"
        android:layout_toLeftOf="@+id/testText"
        android:layout_toStartOf="@+id/testText"
        android:layout_marginBottom="49dp" />

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/border_grey"
        android:textSize="50sp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_alignEnd="@+id/imageView1" />

    <EditText
        android:id="@+id/reportSettingsUrlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView01"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_alignRight="@+id/testText"
        android:layout_toRightOf="@+id/TextView01"
        android:ems="10"
        android:textColor="@color/black" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/reportSettingsFileSelectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/testText"
        android:background="@color/dark_grey"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:text="+"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/reportSettingsFileSelectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reportSettingsFileOpenButton"
        android:layout_marginRight="21dp"
        android:layout_toLeftOf="@+id/reportSettingsFileSelectButton"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:hint="Select a file from this device"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/currentReportSettingsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Report Settings: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_above="@+id/reportSettingsFileSelectButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>